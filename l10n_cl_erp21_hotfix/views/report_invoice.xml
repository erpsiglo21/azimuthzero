<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="informations" inherit_id="l10n_cl.informations">
        <xpath expr="//span[@t-esc='report_date']" position="replace">
            <span t-esc="o.invoice_date" t-options='{"widget": "date"}'/>
        </xpath>
    </template>
    <template id="report_invoice_document" inherit_id="l10n_cl.report_invoice_document" primary="True">
        <xpath expr="//t[@t-call='l10n_cl.informations']" position="attributes">
            <attribute name="t-lang">doc.partner_id.lang</attribute>
        </xpath>
    </template>
</odoo>
